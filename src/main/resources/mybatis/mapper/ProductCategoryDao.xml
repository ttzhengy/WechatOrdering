<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yat.wechatorderingsystem.dao.ProductCategoryDao">

    <select id="selectById" resultType="com.yat.wechatorderingsystem.entity.ProductCategory">
        select * from product_category where category_id=${id}
    </select>

    <insert id="insertProductCategory" parameterType="com.yat.wechatorderingsystem.entity.ProductCategory">
        insert into product_category(category_id, category_name, category_type)
        values (#{categoryId},#{categoryName},#{categoryType})
    </insert>
</mapper>